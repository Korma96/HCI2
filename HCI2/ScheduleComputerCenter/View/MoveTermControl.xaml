<UserControl x:Class="ScheduleComputerCenter.View.MoveTermControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScheduleComputerCenter.View"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    <Grid>
        <MediaElement VerticalAlignment="Top" Name="MediaElement"  Source="../../Images/move_term.mp4" Width="800" Height="350" />
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
            <Button Content="Play" Height="50" Width="80" VerticalAlignment="Top" HorizontalAlignment="Right" Click="Button_Click"/>
            <Button Content="Pause" Height="50" Width="80"  VerticalAlignment="Top" HorizontalAlignment="Right" Click="Button_Click_1"/>
            <Button Content="Stop" Height="50" Width="80"  VerticalAlignment="Top" HorizontalAlignment="Right" Click="Button_Click_2"/>
        </StackPanel>
    </Grid>
</UserControl>
